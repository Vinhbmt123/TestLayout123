<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblUserName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#03A9F4"
        android:text="Calculator"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="#ff000000"
        android:textStyle="bold" >
    </TextView>
    <EditText
        android:id="@+id/txtUserName"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lblUserName"
        android:padding="20dp" >
    </EditText>

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/txtUserName"
        android:layout_alignLeft="@+id/txtUserName"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-9dp"
        android:text="%"
        android:textSize="30dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/txtUserName"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-9dp"
        android:layout_toRightOf="@+id/btn1"
        android:text="CE"
        android:textSize="30dp"></Button>

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/txtUserName"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-9dp"
        android:layout_toRightOf="@+id/btn2"
        android:text="C"
        android:textSize="30dp"></Button>

    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/txtUserName"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-9dp"
        android:layout_toRightOf="@+id/btn3"
        android:text="Del"
        android:textSize="30dp"></Button>

    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn1"
        android:layout_alignLeft="@+id/btn1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:text="1/x"
        android:textSize="20dp"></Button>

    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn2"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn5"
        android:text="x^2"
        android:textSize="20dp"></Button>

    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn2"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn6"
        android:text="x^1/2"
        android:textSize="20dp"></Button>

    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn2"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn7"
        android:text="/"
        android:textSize="30dp"></Button>

    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn5"
        android:layout_alignLeft="@+id/btn5"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:text="7"
        android:background="#FAFAFB"
        android:textSize="30dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn10"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn6"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn9"
        android:text="8"
        android:background="#FAFAFB"
        android:textSize="30dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn11"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn6"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn10"
        android:text="9"
        android:background="#FAFAFB"
        android:textSize="30dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn12"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn6"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn11"
        android:text="x"
        android:textSize="25dp"></Button>

    <Button
        android:id="@+id/btn13"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn9"
        android:layout_alignLeft="@+id/btn9"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:text="4"
        android:background="#FAFAFB"
        android:textSize="30dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn14"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn9"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn13"
        android:text="5"
        android:background="#FAFAFB"
        android:textSize="30dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn15"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn9"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn14"
        android:text="6"
        android:background="#FAFAFB"
        android:textSize="30dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn16"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn9"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn15"
        android:text="-"
        android:textSize="50dp"
       ></Button>

    <Button
        android:id="@+id/btn17"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn13"
        android:layout_alignLeft="@+id/btn13"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:text="1"
        android:background="#FAFAFB"
        android:textSize="30dp"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn18"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn13"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn17"
        android:text="2"
        android:background="#FAFAFB"
        android:textSize="30dp"
        android:textStyle="bold"></Button>

    <Button
    android:id="@+id/btn19"
    android:layout_width="100dp"
    android:layout_height="90dp"
    android:layout_below="@+id/btn13"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_toRightOf="@+id/btn18"
    android:text="3"
    android:background="#FAFAFB"
    android:textSize="30dp"
    android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn20"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn16"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn19"
        android:text="+"
        android:textSize="30dp"
        ></Button>

    <Button
        android:id="@+id/btn21"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn17"
        android:layout_alignLeft="@+id/btn17"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:background="#FAFAFB"
        android:text="+/-"
        android:textSize="30dp"
        ></Button>

    <Button
        android:id="@+id/btn22"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn18"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn21"
        android:text="0"
        android:background="#FAFAFB"
        android:textSize="30dp"
        android:textStyle="bold"
        ></Button>

    <Button
        android:id="@+id/btn23"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn18"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn22"
        android:text=","
        android:background="#FAFAFB"
        android:textSize="30dp"
       ></Button>

    <Button
        android:id="@+id/btn24"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn18"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn23"
        android:text="="
        android:textSize="40dp"
        ></Button>



</RelativeLayout>




